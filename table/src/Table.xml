            </property>
            <property key="StartDate" type="attribute" dataSource="Tasks">
                <caption>StartDate</caption>
                <description>What time is this task will be start</description>
                <attributeTypes>
                    <attributeType name="DateTime" />
                </attributeTypes>
            </property>
            <property key="EndDate" type="attribute" dataSource="Tasks">
                <caption>EndDate</caption>
                <description>What time is this task will be end</description>
                <attributeTypes>
                    <attributeType name="DateTime" />
                </attributeTypes>
            </property>
            <property key="StartTime" type="attribute" dataSource="Tasks">
                <caption>StartTime</caption>
                <description>What time is this task will be start by hour?</description>
                <attributeTypes>
                    <attributeType name="DateTime" />
                </attributeTypes>
            </property>
            <property key="QualityofEmployeeWhoJoinThatTask" type="attribute" dataSource="Tasks">
                <caption>Number of employee will join</caption>
                <description>Quality</description>
                <attributeTypes>
                    <attributeType name="Integer" />
                </attributeTypes>
            </property>
        </propertyGroup>
    </properties>
</widget>